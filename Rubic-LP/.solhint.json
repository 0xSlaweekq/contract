{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "compiler-version": "off",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "no-empty-blocks": "off",
    "no-inline-assembly": "off",
    "not-rely-on-time": "off",
    "prettier/prettier": "error",
    "quotes": ["error", "double"],
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ]
  }
}
