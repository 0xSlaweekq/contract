{
  "$schema": "http://json.schemastore.org/prettierrc",
  "overrides": [
    {
      "files": ["*.sol"],
      "options": {
        "arrowParens": "avoid",
        "bracketSpacing": false,
        "embeddedLanguageFormatting": "auto",
        "endOfLine": "auto",
        "printWidth": 132,
        "proseWrap": "always",
        "semi": true,
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": false
      }
    },
    {
      "files": ["*.js", "*.ts", "*.json"],
      "options": {
        "arrowParens": "avoid",
        "bracketSameLine": false,
        "bracketSpacing": true,
        "embeddedLanguageFormatting": "auto",
        "endOfLine": "auto",
        "printWidth": 100,
        "proseWrap": "always",
        "quoteProps": "as-needed",
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "none",
        "useTabs": false
      }
    }
  ]
}
